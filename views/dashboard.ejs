<!DOCTYPE html>
<html>

<head>
  <title>Campus Assistant | Dashboard</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box
    }

    body {
      font-family: 'Inter', sans-serif;
      background: #f8fafc;
      display: flex;
      min-height: 100vh;
      color: #0f172a;
    }

    /* Sidebar */
    .sidebar {
      width: 230px;
      background: #0f172a;
      color: #fff;
      padding: 30px 20px;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }

    .sidebar h2 {
      font-size: 18px;
      margin-bottom: 35px;
    }

    .sidebar a {
      display: block;
      color: #cbd5e1;
      text-decoration: none;
      margin-bottom: 14px;
      font-size: 14px;
      transition: 0.2s;
    }

    .sidebar a:hover {
      color: white;
    }

    /* Main */
    .main {
      flex: 1;
      padding: 40px;
      max-width: 1200px;
      margin: auto;
    }

    /* Topbar */
    .topbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 40px;
    }

    .topbar h2 {
      font-size: 22px;
      font-weight: 600;
    }

    /* Summary grid */
    .summary {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 20px;
      margin-bottom: 30px;
    }

    .card {
      background: white;
      padding: 22px;
      border-radius: 14px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    }

    .card h3 {
      font-size: 13px;
      color: #64748b;
      margin-bottom: 8px;
    }

    .card p {
      font-size: 24px;
      font-weight: 600;
    }

    /* Progress */
    .progress-wrap {
      margin-top: 10px;
      height: 8px;
      background: #e2e8f0;
      border-radius: 10px;
      overflow: hidden;
    }

    .progress-bar {
      height: 8px;
      width: 0%;
      background: #22c55e;
      transition: width 0.6s ease;
    }

    /* Section */
    .section-title {
      margin: 30px 0 15px;
      font-weight: 600;
      font-size: 17px;
    }

    /* Assignment list */
    .assignment-list {
      background: white;
      border-radius: 14px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
      padding: 10px 20px;
    }

    .assignment {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 14px 0;
      border-bottom: 1px solid #f1f5f9;
    }

    .assignment:last-child {
      border-bottom: none;
    }

    .assignment-info strong {
      font-size: 14px;
    }

    .assignment-info small {
      font-size: 12px;
      color: #64748b;
    }

    /* Badges */
    .badge {
      padding: 4px 10px;
      border-radius: 20px;
      font-size: 11px;
      font-weight: 500;
    }

    .badge.pending {
      background: #fef3c7;
      color: #92400e
    }

    .badge.done {
      background: #dcfce7;
      color: #166534
    }

    .badge.overdue {
      background: #fee2e2;
      color: #b91c1c
    }

    /* Buttons */
    .btn {
      padding: 5px 10px;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      font-size: 12px;
      margin-left: 8px;
    }

    .btn-complete {
      background: #22c55e;
      color: white
    }

    .btn-undo {
      background: #ef4444;
      color: white
    }

    .btn:hover {
      opacity: 0.9
    }

    /* Mobile */
    @media(max-width:900px) {
      body {
        flex-direction: column
      }

      .sidebar {
        width: 100%;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
      }

      .main {
        padding: 20px
      }
    }
  </style>
</head>

<body>

  <!-- SIDEBAR -->
  <div class="sidebar">
    <div>
      <h2>ðŸŽ“ Campus Assistant</h2>
      <a href="/dashboard">Dashboard</a>
      <a href="/busform">Transport</a>
    </div>
    <a href="/logout">Logout</a>
  </div>

  <div class="main">

    <!-- TOPBAR -->
    <div class="topbar">
      <h2>Welcome, <%= user.displayName %> ðŸ‘‹</h2>
      <div class="profile">
        <img src="<%= user.photos?.[0]?.value || 'https://via.placeholder.com/40' %>">
      </div>
    </div>

    <!-- SUMMARY -->
    <div class="summary">

      <div class="card">
        <h3>Total Courses</h3>
        <p>
          <%= courses.length %>
        </p>
      </div>

      <div class="card">
        <h3>Total Assignments</h3>
        <p>
          <%= total %>
        </p>
      </div>

      <div class="card">
        <h3>Completed</h3>
        <p>
          <%= completed %>
        </p>
      </div>

      <div class="card">
        <h3>Pending</h3>
        <p>
          <%= pending %>
        </p>
      </div>

      <div class="card">
        <h3>Overdue</h3>
        <p>
          <%= overdue %>
        </p>
      </div>

      <div class="card">
        <h3>Productivity</h3>
        <p class="progressText">
          <%= progress %>%
        </p>
        <div class="progress-wrap">
          <div class="progress-bar"></div>
        </div>
      </div>

    </div>

    <!-- ASSIGNMENTS -->
    <div class="section-title">ðŸ“… Your Assignments</div>

    <% if(assignments.length===0) { %>

      <div class="empty">
        <h3>No Assignments Found ðŸŽ‰</h3>
      </div>

      <% } else { %>

        <div class="card">
          <% assignments .sort((a,b)=> new Date(a.dueDate || 0) - new Date(b.dueDate || 0))
            .forEach(work => { %>

            <div class="assignment">

              <div class="assignment-info">
                <strong>
                  <%= work.title %>
                </strong>
                <small>
                  <%= work.dueDate ? new Date(work.dueDate).toLocaleDateString() : "No Due Date" %>
                </small>
              </div>

              <div>
                <% if(work.status==="completed" ) { %>
                  <span class="badge done">Completed</span>
                  <button class="action-btn btn-undo" onclick="updateStatus('<%= work._id %>', 'undo')">
                    Undo
                  </button>
                  <% } else if(work.overdue) { %>
                    <span class="badge overdue">Overdue</span>
                    <button class="action-btn btn-complete" onclick="updateStatus('<%= work._id %>', 'complete')">
                      Mark Done
                    </button>
                    <% } else { %>
                      <span class="badge pending">Pending</span>
                      <button class="action-btn btn-complete" onclick="updateStatus('<%= work._id %>', 'complete')">
                        Mark Done
                      </button>
                      <% } %>
              </div>
              <% }) %>

            </div>
            <% } %>

        </div>
        <script>

          document.addEventListener("DOMContentLoaded", () => {
            const text = document.querySelector(".progressText");
            if (text) {
              const value = parseInt(text.innerText);
              document.querySelector(".progress-bar").style.width = value + "%";
            }
          });


          async function updateStatus(id, action) {
            try {
              const res = await fetch(`/assignments/${id}/${action}`, {
                method: "POST"
              });

              const data = await res.json();

              if (data.success) {
                location.reload(); // later we remove reload
              }
            } catch (err) {
              console.error(err);
            }
          }
        </script>
</body>

</html>