<!DOCTYPE html>
<html>
<head>
<title>Campus Assistant | Dashboard</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

<style>
*{margin:0;padding:0;box-sizing:border-box;}

body{
  font-family:'Inter',sans-serif;
  background:#f1f5f9;
  min-height:100vh;
  display:flex;
}

/* SIDEBAR */
.sidebar{
  width:250px;
  background:#1e3a8a;
  color:white;
  padding:30px 20px;
  display:flex;
  flex-direction:column;
  justify-content:space-between;
  transition:0.3s;
}

.sidebar h2{
  font-size:18px;
  margin-bottom:40px;
}

.sidebar a{
  display:block;
  color:white;
  text-decoration:none;
  margin-bottom:18px;
  font-size:14px;
  opacity:0.9;
  transition:0.2s;
}

.sidebar a:hover{
  opacity:1;
  transform:translateX(4px);
}

/* MAIN */
.main{
  flex:1;
  padding:40px;
}

/* TOPBAR */
.topbar{
  display:flex;
  justify-content:space-between;
  align-items:center;
  margin-bottom:30px;
}

.topbar h2{
  font-size:22px;
}

.profile{
  display:flex;
  align-items:center;
  gap:10px;
}

.profile img{
  width:42px;
  height:42px;
  border-radius:50%;
}

/* SUMMARY */
.summary{
  display:grid;
  grid-template-columns:repeat(auto-fit,minmax(220px,1fr));
  gap:20px;
  margin-bottom:40px;
}

.summary-card{
  background:white;
  padding:22px;
  border-radius:14px;
  box-shadow:0 8px 20px rgba(0,0,0,0.05);
  transition:0.3s;
}

.summary-card:hover{
  transform:translateY(-4px);
}

.summary-card h3{
  font-size:13px;
  color:#64748b;
  margin-bottom:8px;
}

.summary-card p{
  font-size:24px;
  font-weight:600;
}

/* SECTION */
.section-title{
  font-size:18px;
  font-weight:600;
  margin-bottom:18px;
}

/* CARD */
.card{
  background:white;
  padding:22px;
  border-radius:14px;
  box-shadow:0 8px 20px rgba(0,0,0,0.05);
  margin-bottom:40px;
}

/* ASSIGNMENTS */
.assignment{
  padding:14px 0;
  border-bottom:1px solid #e2e8f0;
  display:flex;
  justify-content:space-between;
  align-items:center;
  gap:15px;
}

.assignment:last-child{
  border-bottom:none;
}

.assignment-info strong{
  display:block;
  font-size:14px;
}

.assignment-info small{
  color:#64748b;
  font-size:12px;
}

/* BADGES */
.badge{
  padding:5px 10px;
  border-radius:6px;
  font-size:11px;
  font-weight:500;
}

.pending{
  background:#fee2e2;
  color:#b91c1c;
}

.done{
  background:#dcfce7;
  color:#166534;
}

/* COURSES GRID */
.grid{
  display:grid;
  grid-template-columns:repeat(auto-fit,minmax(240px,1fr));
  gap:20px;
}

.course-card{
  background:white;
  padding:20px;
  border-radius:14px;
  box-shadow:0 8px 20px rgba(0,0,0,0.05);
  transition:0.3s;
}

.course-card:hover{
  transform:translateY(-4px);
}

.course-card h3{
  font-size:14px;
  margin-bottom:6px;
}

.course-card p{
  font-size:12px;
  color:#64748b;
}

/* EMPTY STATE */
.empty{
  background:white;
  padding:30px;
  text-align:center;
  border-radius:14px;
  box-shadow:0 8px 20px rgba(0,0,0,0.05);
}

/* MOBILE */
@media(max-width:900px){
  body{
    flex-direction:column;
  }

  .sidebar{
    width:100%;
    flex-direction:row;
    align-items:center;
    padding:15px 20px;
  }

  .sidebar h2{
    margin:0;
  }

  .sidebar div{
    display:flex;
    gap:20px;
  }

  .sidebar a{
    margin:0;
  }

  .main{
    padding:20px;
  }

  .topbar{
    flex-direction:column;
    align-items:flex-start;
    gap:15px;
  }
}
</style>
</head>

<body>

<!-- SIDEBAR -->
<div class="sidebar">
<div>
    <h2>ðŸŽ“ Campus Assistant</h2>
    <a href="/dashboard">Dashboard</a>
    <a href="/busform">Transport</a>
    </div>
    <a href="/logout">Logout</a>
    </div>

<!-- MAIN CONTENT -->
<div class="main">

<!-- TOPBAR -->
<div class="topbar">
<h2>Welcome, <%= user.displayName %> ðŸ‘‹</h2>
<div class="profile">
    <img src="<%= user.photos?.[0]?.value || 'https://via.placeholder.com/40' %>">
</div>
</div>

<!-- SUMMARY -->
<div class="summary">
<div class="summary-card">
    <h3>Total Courses</h3>
    <p>
        <%= courses.length %>
    </p>
    </div>

<div class="summary-card">
    <h3>Total Assignments</h3>
    <p>
        <%= assignments.length %>
    </p>
    </div>

<div class="summary-card">
    <h3>Pending</h3>
    <p>
        <%= assignments.filter(w=> w.state !== "TURNED_IN").length %>
            </p>
    </div>
    </div>

<!-- UPCOMING ASSIGNMENTS -->
<div class="section-title">ðŸ“… Upcoming Assignments</div>

<% let sorted=assignments.filter(w=> w.dueDate)
    .sort((a,b)=>{
    const da = new Date(a.dueDate.year,a.dueDate.month-1,a.dueDate.day);
    const db = new Date(b.dueDate.year,b.dueDate.month-1,b.dueDate.day);
    return da - db;
    })
    .slice(0,5);
    %>

    <% if(sorted.length===0){ %>
        <div class="empty">
    <h3>No Upcoming Work ðŸŽ‰</h3>
    </div>
    <% } else { %>

<div class="card">
<% sorted.forEach(work=>{ %>
    <div class="assignment">
    <div class="assignment-info">
        <strong>
            <%= work.title %>
        </strong>
        <small>
        Due: <%= `${work.dueDate.day}/${work.dueDate.month}/${work.dueDate.year}` %>
            </small>
    </div>
    
    <% if(work.state==="TURNED_IN" ){ %>
        <div class="badge done">Submitted</div>
        <% } else { %>
            <div class="badge pending">Pending</div>
            <% } %>
                </div>
<% }) %>
    </div>

<% } %>

<!-- COURSES -->
<div class="section-title">ðŸ“š Your Courses</div>

<% if(courses.length===0){ %>
    <div class="empty">
        <h3>No Courses Found</h3>
    </div>
    <% } else { %>

<div class="grid">
<% courses.forEach(course=>{ %>
    <div class="course-card">
        <h3>
            <%= course.name %>
        </h3>
        <p>
            <%= course.section || "No Section" %>
        </p>
    </div>
    <% }) %>
        </div>

<% } %>

</div>
</body>
</html>