<!DOCTYPE html>
<html>

<head>
  <title>Campus Assistant | Dashboard</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box
    }

    body {
      font-family: 'Inter', sans-serif;
      background: linear-gradient(135deg, #eef2ff, #f8fafc);
      min-height: 100vh;
      display: flex;
      color: #1e293b;
    }

    /* SIDEBAR */
    .sidebar {
      width: 240px;
      background: #111827;
      color: #fff;
      padding: 30px 20px;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }

    .sidebar h2 {
      font-size: 18px;
      margin-bottom: 40px;
      font-weight: 600;
    }

    .sidebar a {
      display: block;
      color: #d1d5db;
      text-decoration: none;
      margin-bottom: 16px;
      font-size: 14px;
      transition: 0.3s;
    }

    .sidebar a:hover {
      color: #fff;
      transform: translateX(4px);
    }

    /* MAIN */
    .main {
      flex: 1;
      padding: 40px;
    }

    /* TOPBAR */
    .topbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 40px;
    }

    .topbar h2 {
      font-size: 24px;
      font-weight: 600;
    }

    /* SUMMARY */
    .summary {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 20px;
      margin-bottom: 40px;
    }

    .summary-card {
      background: #fff;
      padding: 24px;
      border-radius: 18px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
      transition: 0.3s;
    }

    .summary-card:hover {
      transform: translateY(-5px);
    }

    .summary-card h3 {
      font-size: 13px;
      color: #64748b;
      margin-bottom: 10px;
    }

    .summary-card p {
      font-size: 26px;
      font-weight: 700;
    }

    /* Progress bar */
    .progress-container {
      margin-top: 10px;
      background: #e5e7eb;
      border-radius: 10px;
      height: 10px;
      overflow: hidden;
    }

    .progress-bar {
      height: 10px;
      width: 0%;
      background: linear-gradient(90deg, #22c55e, #16a34a);
      transition: width 0.8s ease;
    }

    /* Section title */
    .section-title {
      font-size: 18px;
      font-weight: 600;
      margin: 30px 0 20px 0;
    }

    /* CARD */
    .card {
      background: #fff;
      padding: 25px;
      border-radius: 18px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
    }

    /* ASSIGNMENT ROW */
    .assignment {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 16px 0;
      border-bottom: 1px solid #f1f5f9;
    }

    .assignment:last-child {
      border-bottom: none;
    }

    .assignment-info strong {
      font-size: 15px;
    }

    .assignment-info small {
      color: #64748b;
      font-size: 12px;
    }

    /* BADGES */
    .badge {
      padding: 6px 12px;
      border-radius: 20px;
      font-size: 11px;
      font-weight: 600;
    }

    .badge.pending {
      background: #fef3c7;
      color: #92400e;
    }

    .badge.done {
      background: #dcfce7;
      color: #166534;
    }

    .badge.overdue {
      background: #fee2e2;
      color: #b91c1c;
    }

    /* BUTTONS */
    .action-btn {
      padding: 6px 12px;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      font-size: 12px;
      margin-left: 10px;
      transition: 0.2s;
    }

    .btn-complete {
      background: #22c55e;
      color: white;
    }

    .btn-complete:hover {
      background: #16a34a;
    }

    .btn-undo {
      background: #ef4444;
      color: white;
    }

    .btn-undo:hover {
      background: #dc2626;
    }

    /* MOBILE */
    @media(max-width:900px) {
      body {
        flex-direction: column
      }

      .sidebar {
        width: 100%;
        flex-direction: row;
        justify-content: space-between;
      }

      .main {
        padding: 20px
      }

      .topbar {
        flex-direction: column;
        align-items: flex-start;
        gap: 10px
      }
    }
  </style>
</head>

<body>

  <!-- SIDEBAR -->
  <div class="sidebar">
    <div>
      <h2>ðŸŽ“ Campus Assistant</h2>
      <a href="/dashboard">Dashboard</a>
      <a href="/busform">Transport</a>
    </div>
    <a href="/logout">Logout</a>
  </div>

  <div class="main">

    <!-- TOPBAR -->
    <div class="topbar">
      <h2>Welcome, <%= user.displayName %> ðŸ‘‹</h2>
      <div class="profile">
        <img src="<%= user.photos?.[0]?.value || 'https://via.placeholder.com/40' %>">
      </div>
    </div>

    <!-- SUMMARY -->
    <div class="summary">

      <div class="summary-card">
        <h3>Total Courses</h3>
        <p>
          <%= courses.length %>
        </p>
      </div>

      <div class="summary-card">
        <h3>Total Assignments</h3>
        <p class="totalCount">
          <%= total %>
        </p>
      </div>

      <div class="summary-card">
        <h3>Completed</h3>
        <p class="completeCount">
          <%= completed %>
        </p>
      </div>

      <div class="summary-card">
        <h3>Pending</h3>
        <p class="pendingCount">
          <%= pending %>
        </p>
      </div>

      <div class="summary-card">
        <h3>Overdue</h3>
        <p>
          <%= overdue %>
        </p>
      </div>

      <div class="summary-card">
        <h3>Productivity</h3>
        <p class="progressText">
          <%= progress %>%
        </p>
      </div>
      <div style="margin-top:10px;background:#e2e8f0;border-radius:8px;height:10px;">
        <div id="progressBar"
          style="height:10px;width:0%;background:#16a34a;border-radius:8px;transition:width 0.6s ease;">
        </div>
      </div>
    </div>

    <!-- ASSIGNMENTS -->
    <div class="section-title">ðŸ“… Your Assignments</div>

    <% if(assignments.length===0) { %>

      <div class="empty">
        <h3>No Assignments Found ðŸŽ‰</h3>
      </div>

      <% } else { %>

        <div class="card">
          <% assignments .sort((a,b)=> new Date(a.dueDate || 0) - new Date(b.dueDate || 0))
            .forEach(work => { %>

            <div class="assignment">

              <div class="assignment-info">
                <strong>
                  <%= work.title %>
                </strong>
                <small>
                  <%= work.dueDate ? new Date(work.dueDate).toLocaleDateString() : "No Due Date" %>
                </small>
              </div>

              <div>
                <% if(work.status==="completed" ) { %>
                  <span class="badge done">Completed</span>
                  <button class="action-btn btn-undo" onclick="updateStatus('<%= work._id %>', 'undo')">
                    Undo
                  </button>
                  <% } else if(work.overdue) { %>
                    <span class="badge overdue">Overdue</span>
                    <button class="action-btn btn-complete" onclick="updateStatus('<%= work._id %>', 'complete')">
                      Mark Done
                    </button>
                    <% } else { %>
                      <span class="badge pending">Pending</span>
                      <button class="action-btn btn-complete" onclick="updateStatus('<%= work._id %>', 'complete')">
                        Mark Done
                      </button>
                    <% } %>
              </div>
              <% }) %>

            </div>
            <% } %>

        </div>
       <script>
document.addEventListener("DOMContentLoaded", () => {
  const progressText = document.querySelector(".progressText");
  if(progressText){
    const progress = parseInt(progressText.innerText);
    document.querySelector(".progress-bar").style.width = progress + "%";
  }
});

async function updateStatus(id, action) {
  try {
    const res = await fetch(`/assignments/${id}/${action}`, {
      method: "POST"
    });

    const data = await res.json();

    if (data.success) {
      location.reload(); // later we remove reload
    }
  } catch (err) {
    console.error(err);
  }
}
</script>
</body>

</html>