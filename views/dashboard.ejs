<!DOCTYPE html>
<html>

<head>
  <title>Campus Assistant | Dashboard</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', sans-serif;
      background: #f1f5f9;
      min-height: 100vh;
      display: flex;
    }

    /* SIDEBAR */
    .sidebar {
      width: 250px;
      background: #1e3a8a;
      color: white;
      padding: 30px 20px;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      transition: 0.3s;
    }

    .sidebar h2 {
      font-size: 18px;
      margin-bottom: 40px;
    }

    .sidebar a {
      display: block;
      color: white;
      text-decoration: none;
      margin-bottom: 18px;
      font-size: 14px;
      opacity: 0.9;
      transition: 0.2s;
    }

    .sidebar a:hover {
      opacity: 1;
      transform: translateX(4px);
    }

    /* MAIN */
    .main {
      flex: 1;
      padding: 40px;
    }

    /* TOPBAR */
    .topbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 30px;
    }

    .topbar h2 {
      font-size: 22px;
    }

    .profile {
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .profile img {
      width: 42px;
      height: 42px;
      border-radius: 50%;
    }

    /* SUMMARY */
    .summary {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 20px;
      margin-bottom: 40px;
    }

    .summary-card {
      background: white;
      padding: 22px;
      border-radius: 14px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
      transition: 0.3s;
    }

    .summary-card:hover {
      transform: translateY(-4px);
    }

    .summary-card h3 {
      font-size: 13px;
      color: #64748b;
      margin-bottom: 8px;
    }

    .summary-card p {
      font-size: 24px;
      font-weight: 600;
    }

    /* SECTION */
    .section-title {
      font-size: 18px;
      font-weight: 600;
      margin-bottom: 18px;
    }

    /* CARD */
    .card {
      background: white;
      padding: 22px;
      border-radius: 14px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
      margin-bottom: 40px;
    }

    /* ASSIGNMENTS */
    .assignment {
      padding: 14px 0;
      border-bottom: 1px solid #e2e8f0;
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 15px;
    }

    .assignment:last-child {
      border-bottom: none;
    }

    .assignment-info strong {
      display: block;
      font-size: 14px;
    }

    .assignment-info small {
      color: #64748b;
      font-size: 12px;
    }

    /* BADGES */
    .badge {
      padding: 5px 10px;
      border-radius: 6px;
      font-size: 11px;
      font-weight: 500;
    }

    .pending {
      background: #fee2e2;
      color: #b91c1c;
    }

    .done {
      background: #dcfce7;
      color: #166534;
    }

    /* COURSES GRID */
    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      gap: 20px;
    }

    .course-card {
      background: white;
      padding: 20px;
      border-radius: 14px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
      transition: 0.3s;
    }

    .course-card:hover {
      transform: translateY(-4px);
    }

    .course-card h3 {
      font-size: 14px;
      margin-bottom: 6px;
    }

    .course-card p {
      font-size: 12px;
      color: #64748b;
    }

    /* EMPTY STATE */
    .empty {
      background: white;
      padding: 30px;
      text-align: center;
      border-radius: 14px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
    }

    /* MOBILE */
    @media(max-width:900px) {
      body {
        flex-direction: column;
      }

      .sidebar {
        width: 100%;
        flex-direction: row;
        align-items: center;
        padding: 15px 20px;
      }

      .sidebar h2 {
        margin: 0;
      }

      .sidebar div {
        display: flex;
        gap: 20px;
      }

      .sidebar a {
        margin: 0;
      }

      .main {
        padding: 20px;
      }

      .topbar {
        flex-direction: column;
        align-items: flex-start;
        gap: 15px;
      }
    }
  </style>
</head>

<body>

  <!-- SIDEBAR -->
  <div class="sidebar">
    <div>
      <h2>ðŸŽ“ Campus Assistant</h2>
      <a href="/dashboard">Dashboard</a>
      <a href="/busform">Transport</a>
    </div>
    <a href="/logout">Logout</a>
  </div>

  <div class="main">

    <!-- TOPBAR -->
    <div class="topbar">
      <h2>Welcome, <%= user.displayName %> ðŸ‘‹</h2>
      <div class="profile">
        <img src="<%= user.photos?.[0]?.value || 'https://via.placeholder.com/40' %>">
      </div>
    </div>

    <!-- SUMMARY -->
    <div class="summary">

      <div class="summary-card">
        <h3>Total Courses</h3>
        <p>
          <%= courses.length %>
        </p>
      </div>

      <div class="summary-card">
        <h3>Total Assignments</h3>
        <p class="totalCount">
          <%= total %>
        </p>
        </div>
        
        <div class="summary-card">
          <h3>Completed</h3>
          <p class="completeCount">
            <%= completed %>
          </p>
        </div>

      <div class="summary-card">
        <h3>Pending</h3>
        <p class="pendingCount">
          <%= pending %>
        </p>
        </div>
        
        <div class="summary-card">
          <h3>Overdue</h3>
        <p>
          <%= overdue %>
            </p>
            </div>

      <div class="summary-card">
        <h3>Productivity</h3>
        <p class="progressText">
          <%= progress %>%
        </p>
        </div>
      <div style="margin-top:10px;background:#e2e8f0;border-radius:8px;height:10px;">
        <div id="progressBar" style="height:10px;width:0%;background:#16a34a;border-radius:8px;transition:width 0.6s ease;">
        </div>
      </div>
    </div>

    <!-- ASSIGNMENTS -->
    <div class="section-title">ðŸ“… Your Assignments</div>

    <% if(assignments.length===0) { %>

      <div class="empty">
        <h3>No Assignments Found ðŸŽ‰</h3>
        </div>

      <% } else { %>

        <div class="card">
<% assignments .sort((a,b)=> new Date(a.dueDate || 0) - new Date(b.dueDate || 0))
  .forEach(work => { %>

  <div class="assignment">

              <div class="assignment-info">
                <strong>
                  <%= work.title %>
                </strong>
                <small>
                  <%= work.dueDate ? new Date(work.dueDate).toLocaleDateString() : "No Due Date" %>
                    </small>
                    </div>

              <div>
              
                <% if(work.status==="completed" ) { %>
              
                  <span class="badge done">Completed</span>
              
                  <form action="/assignments/<%= work._id %>/undo" method="POST" style="display:inline;">
                    <button
                      style="margin-left:8px;padding:6px 10px;border:none;border-radius:6px;background:#dc2626;color:white;cursor:pointer;">
                      Undo
                    </button>
                  </form>
              
                  <% } else if(work.overdue) { %>
              
                    <span class="badge pending" style="background:#facc15;color:#92400e;">
                      Overdue
                    </span>
              
                    <form action="/assignments/<%= work._id %>/complete" method="POST" style="display:inline;">
                      <button onclick="updateStatus('<%= work._id %>', 'complete')"
                        style="margin-left:8px;padding:6px 10px;border:none;border-radius:6px;background:#16a34a;color:white;cursor:pointer;">
                        Mark Done
                      </button>
                    </form>
              
                    <% } else { %>
<span class="badge pending">Pending</span>

<form action="/assignments/<%= work._id %>/complete" method="POST" style="display:inline;">
  <button
    style="margin-left:8px;padding:6px 10px;border:none;border-radius:6px;background:#16a34a;color:white;cursor:pointer;">
    Mark Done
  </button>
</form>

                      <% } %>

              </div>

            </div>

            <% }) %>

        </div>
        <% } %>

  </div>
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const progress = parseInt(document.getElementById("progressText").innerText);
      document.getElementById("progressBar").style.width = progress + "%";
    });

    async function updateStatus(id, action) {
      try {
        const res = await fetch(`/assignments/${id}/${action}`, {
          method: "POST"
        });

        const data = await res.json();

        if (data.success) {
          location.reload(); // temporary (we improve next)
        }
      } catch (err) {
        console.error(err);
      }
    }

  </script>
</body>

</html>